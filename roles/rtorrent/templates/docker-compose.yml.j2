rtorrent:
  image: diameter/rtorrent-rutorrent:64
  ports:
    - "8080:80"
    - "49160:49160/udp"
    - "49161:49161"
  volumes:
    - {{downloadLocation}}_notready:/downloads_notready
    - {{downloadLocation}}:/downloads
  restart: always
  container_name: rtorrent
  environment:
    PHP_MEM: 1024M
